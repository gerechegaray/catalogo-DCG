rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública de los catálogos JSON
    match /catalog/{fileName} {
      allow read: if true;
      allow write: if false; // Solo Cloud Functions pueden escribir
    }
    
    // Permitir lectura y escritura pública para configuración (Admin usa código local)
    match /config/{fileName} {
      allow read, write: if true;
    }
    
    // Permitir lectura pública de logos de marcas, escritura solo para autenticados
    match /brands/{fileName} {
      allow read: if true; // Cualquiera puede leer los logos
      allow write: if request.auth != null; // Solo usuarios autenticados pueden subir
    }
    
    // Resto de archivos necesita autenticación
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

